<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".fragments.RevenueReportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <!-- Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_header_gradient"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Quay láº¡i"
                app:tint="@color/background_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_revenue_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="ðŸ“Š BÃ¡o cÃ¡o doanh thu"
                android:textColor="@color/background_card"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/btnBack"
                app:layout_constraintEnd_toStartOf="@+id/btn_export"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageButton
                android:id="@+id/btn_export"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_download"
                android:contentDescription="Xuáº¥t bÃ¡o cÃ¡o"
                app:tint="@color/background_card"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Time Period Selector -->
        <HorizontalScrollView
            android:id="@+id/period_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:paddingVertical="16dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@+id/header_section">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_today"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HÃ´m nay"
                    android:checked="true"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_week"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuáº§n nÃ y"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_month"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ThÃ¡ng nÃ y"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_year"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NÄƒm nay"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all_time"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Táº¥t cáº£"/>

            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <!-- Main Revenue Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_total_revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/background_card"
            app:layout_constraintTop_toBottomOf="@+id/period_selector">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:background="@drawable/gradient_revenue_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ’° Tá»•ng doanh thu"
                            android:textColor="@color/background_card"
                            android:textSize="15sp"
                            android:alpha="0.9"/>

                        <TextView
                            android:id="@+id/tv_total_revenue_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0Ä‘"
                            android:textColor="@color/background_card"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            tools:text="2.450.000Ä‘"/>

                        <TextView
                            android:id="@+id/tv_revenue_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="â†‘ +15% so vá»›i tuáº§n trÆ°á»›c"
                            android:textColor="@color/background_card"
                            android:textSize="12sp"
                            android:alpha="0.8"
                            android:visibility="gone"
                            tools:visibility="visible"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_trending_up"
                        android:padding="12dp"
                        android:background="@drawable/bg_circle_white"
                        app:tint="@color/coffee_primary"/>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Stats Grid -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/stats_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/card_total_revenue">

            <!-- Orders Count Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_orders_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/card_avg_order"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.48">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_receipt"
                        android:padding="8dp"
                        android:background="@drawable/bg_icon_light_blue"
                        app:tint="@color/status_pending"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Sá»‘ Ä‘Æ¡n"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_orders_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        tools:text="156"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Average Order Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_avg_order"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:layout_constraintStart_toEndOf="@+id/card_orders_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.48">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_chart"
                        android:padding="8dp"
                        android:background="@drawable/bg_icon_light_orange"
                        app:tint="@color/status_warning"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="TB/Ä‘Æ¡n"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/tv_avg_order_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0Ä‘"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        tools:text="45.000Ä‘"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Details Section Header -->
        <LinearLayout
            android:id="@+id/details_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingVertical="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/stats_grid">

            <TextView
                android:id="@+id/tv_details_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ˆ Chi tiáº¿t theo ngÃ y"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btn_view_chart"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_chart"
                android:contentDescription="Xem biá»ƒu Ä‘á»“"
                app:tint="@color/coffee_primary"/>

        </LinearLayout>

        <!-- Daily Revenue RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_daily_revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:paddingHorizontal="12dp"
            app:layout_constraintTop_toBottomOf="@+id/details_header"
            tools:listitem="@layout/item_daily_revenue"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>