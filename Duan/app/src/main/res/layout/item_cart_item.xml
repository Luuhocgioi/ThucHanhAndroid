<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/background_card">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Product Image Thumbnail -->
        <androidx.cardview.widget.CardView
            android:id="@+id/image_thumbnail"
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_cart_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_coffee_placeholder"
                tools:src="@tools:sample/backgrounds/scenic"/>

        </androidx.cardview.widget.CardView>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete_item"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_delete"
            android:contentDescription="Xóa"
            app:tint="@color/status_error"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!-- Product Info -->
        <LinearLayout
            android:id="@+id/info_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/image_thumbnail"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete_item"
            app:layout_constraintTop_toTopOf="@+id/image_thumbnail">

            <!-- Product Name -->
            <TextView
                android:id="@+id/tv_cart_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trà Sữa Trân Châu"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Bạc Xỉu Đá"/>

            <!-- Note/Options -->
            <TextView
                android:id="@+id/tv_cart_item_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Ghi chú: Ít đường, thêm đá"
                android:textColor="@color/text_tertiary"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="visible"
                tools:text="Size L • Ít đường • Nhiều đá"/>

        </LinearLayout>

        <!-- Price and Quantity Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintStart_toEndOf="@+id/image_thumbnail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_container"
            android:layout_marginStart="14dp">

            <!-- Price -->
            <TextView
                android:id="@+id/tv_cart_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="50.000đ"
                android:textColor="@color/coffee_gold"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="35.000đ"/>

            <!-- Quantity Controls -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/border_light"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/background_secondary">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp">

                    <ImageButton
                        android:id="@+id/btn_decrement_cart"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_remove"
                        android:contentDescription="Giảm"
                        app:tint="@color/coffee_primary"/>

                    <TextView
                        android:id="@+id/tv_cart_item_quantity"
                        android:layout_width="36dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginHorizontal="4dp"
                        tools:text="3"/>

                    <ImageButton
                        android:id="@+id/btn_increment_cart"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_add"
                        android:contentDescription="Tăng"
                        app:tint="@color/coffee_primary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>