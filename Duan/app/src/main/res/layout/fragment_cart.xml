<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_main"
    tools:context=".fragments.CartFragment">

    <!-- HEADER -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_header_gradient"
        android:paddingHorizontal="16dp"
        android:paddingVertical="14dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btn_back_to_menu"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay láº¡i"
            app:tint="@color/background_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_cart_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="ðŸ›’ Giá» hÃ ng"
            android:textColor="@color/background_card"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/btn_back_to_menu"
            app:layout_constraintEnd_toStartOf="@id/btn_clear_cart"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/btn_clear_cart"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="XÃ³a táº¥t cáº£"
            app:tint="@color/background_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- SCROLLABLE CONTENT (RecyclerView + Empty State) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="false"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintBottom_toTopOf="@id/checkout_container">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CART ITEMS -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_cart_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingHorizontal="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
                android:nestedScrollingEnabled="false"/>

            <!-- EMPTY STATE -->
            <LinearLayout
                android:id="@+id/empty_state_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                android:padding="32dp"
                android:layout_gravity="center"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_empty_cart"
                    android:scaleType="centerInside"
                    android:alpha="0.4"
                    app:tint="@color/text_tertiary"/>

                <TextView
                    android:id="@+id/tv_empty_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Giá» hÃ ng trá»‘ng"
                    android:textColor="@color/text_secondary"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="HÃ£y thÃªm mÃ³n yÃªu thÃ­ch vÃ o giá» nhÃ©!"
                    android:textColor="@color/text_tertiary"
                    android:textSize="14sp"
                    android:gravity="center"/>
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- CHECKOUT (FIXED BOTTOM â€“ NO SCROLL) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/checkout_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="68dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/background_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/layout_checkout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- ORDER TYPE SECTION -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="ðŸ“ Loáº¡i Ä‘Æ¡n hÃ ng"
                android:textColor="@color/text_primary"
                android:textSize="13sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/border_light"
                app:strokeWidth="1dp">

                <RadioGroup
                    android:id="@+id/radio_group_order_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="6dp">

                    <RadioButton
                        android:id="@+id/radio_table_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:checked="true"
                        android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="10dp"
                        android:text="ðŸª‘ Táº¡i bÃ n"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <RadioButton
                        android:id="@+id/radio_takeaway_order"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableEnd="?android:attr/listChoiceIndicatorSingle"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="10dp"
                        android:text="ðŸ¥¤ Mang vá»"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </RadioGroup>
            </com.google.android.material.card.MaterialCardView>

            <!-- TABLE NUMBER INPUT -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_target_id"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:hint="Sá»‘ bÃ n (VD: 05)"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeWidth="1dp"
                app:counterEnabled="false"
                app:endIconMode="clear_text"
                app:errorEnabled="false"
                app:helperTextEnabled="false"
                app:hintTextColor="@color/text_tertiary"
                app:startIconDrawable="@drawable/ic_table"
                app:startIconMinSize="20dp"
                app:startIconScaleType="centerInside">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_table_number"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:inputType="textCapCharacters"
                    android:maxLines="1"
                    android:paddingStart="4dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="4dp"
                    android:paddingBottom="12dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DIVIDER -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="14dp"
                android:background="@color/divider" />

            <!-- TOTAL PRICE SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.02"
                        android:text="Tá»•ng cá»™ng"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:letterSpacing="-0.01"
                        android:text="0Ä‘"
                        android:textColor="@color/coffee_gold"
                        android:textSize="26sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.15"
                    app:cardBackgroundColor="@color/coffee_accent"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_receipt_check"
                        app:tint="@color/coffee_primary" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- CONFIRM BUTTON -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_confirm_order"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:elevation="2dp"
                android:letterSpacing="0.02"
                android:text="XÃ¡c nháº­n Ä‘Æ¡n hÃ ng"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/coffee_primary"
                app:cornerRadius="14dp"
                app:icon="@drawable/ic_check_circle"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="22dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>