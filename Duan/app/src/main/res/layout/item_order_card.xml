                android:textSize="14sp"
                android:drawablePadding="4dp"
                tools:text="ðŸ¥¤ Mang vá» - KH: Nguyá»…n VÄƒn A"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tv_order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30"
                android:textColor="@color/text_tertiary"
                android:textSize="13sp"
                tools:text="14:30"/>

        </LinearLayout>

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:layout_marginVertical="12dp"
            app:layout_constraintTop_toBottomOf="@+id/order_info"/>

        <!-- Order Items Preview -->
        <TextView
            android:id="@+id/tv_order_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="2x CÃ  phÃª Ä‘en, 1x Báº¡c xá»‰u Ä‘Ã¡..."
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="2x Espresso, 1x Cappuccino, 3x Americano"/>

        <!-- Bottom Section: Price & Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_order_items">

            <!-- Total Price -->
            <TextView
                android:id="@+id/tv_order_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="145.000Ä‘"
