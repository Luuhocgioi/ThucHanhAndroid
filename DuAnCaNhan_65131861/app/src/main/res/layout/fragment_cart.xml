<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    tools:context=".fragments.CartFragment">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giỏ hàng của bạn"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#3E2723"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- RecyclerView Giỏ hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCartItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_cart"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintBottom_toTopOf="@id/checkoutContainer"
        android:paddingBottom="8dp" />

    <!-- Thanh Checkout/Thông tin thanh toán -->
    <LinearLayout
        android:id="@+id/checkoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Input Số bàn / Order Mang về -->
        <EditText
            android:id="@+id/edtTableNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số bàn (Để trống nếu Mang về)"
            android:inputType="number"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Tổng tiền -->
        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 0 VNĐ"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginBottom="12dp" />

        <!-- Nút Thanh toán -->
        <Button
            android:id="@+id/btnCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thanh toán &amp; Đặt hàng"
            android:padding="12dp"
            android:textSize="18sp"
            android:backgroundTint="#4CAF50" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>