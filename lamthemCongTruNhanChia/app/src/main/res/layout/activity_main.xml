<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtNumberB"
        android:layout_width="217dp"
        android:layout_height="46dp"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#E27474"
        android:ems="10"
        android:hint="Nhập vào số"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.462" />

    <EditText
        android:id="@+id/edtNumberA"
        android:layout_width="224dp"
        android:layout_height="49dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="#E27474"
        android:ems="10"
        android:hint="Nhập vào số"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.362" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="43dp"
        android:layout_height="17dp"
        android:layout_marginEnd="48dp"
        android:text="Số a"
        android:textColor="#E27474"
        android:textColorHighlight="#E27474"
        android:textColorHint="#E27474"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.034"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="43dp"
        android:layout_height="17dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:text="Số b"
        android:textColor="#E27474"
        android:textColorHighlight="#E27474"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edtNumberB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.461" />

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="166dp"
        android:layout_height="22dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="13dp"
        android:hint="Kết quả"
        app:layout_constraintBottom_toTopOf="@+id/rgPhepToan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNumberB" />

    <Button
        android:id="@+id/btn_tinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#E07373"
        android:text="Tính toán"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871" />

    <RadioGroup
        android:id="@+id/rgPhepToan"
        android:layout_width="283dp"
        android:layout_height="53dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.623">

        <RadioButton
            android:id="@+id/rb_cong"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+" />

        <RadioButton
            android:id="@+id/rb_tru"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-" />

        <RadioButton
            android:id="@+id/rb_nhan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="×" />

        <RadioButton
            android:id="@+id/rb_chia"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="÷" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cộng trừ nhân chia"
        android:textColor="#E47575"
        android:textColorLink="#997171"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

</androidx.constraintlayout.widget.ConstraintLayout>